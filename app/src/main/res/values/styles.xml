<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ProgressDialogCustomTheme">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlerterTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SFBTextAppearance.Bold" parent="android:TextAppearance">
        <item name="fontFamily">@font/sfpro_display_regular</item>
        <item name="fontWeight">700</item>
        <item name="color">@color/greyScale_800</item>
    </style>

    <style name="SFBTextAppearance.SemiBold" parent="android:TextAppearance">
        <item name="fontFamily">@font/sfpro_display_regular</item>
        <item name="fontWeight">500</item>
        <item name="color">@color/greyScale_800</item>
    </style>

    <style name="SFBTextAppearance.Normal" parent="android:TextAppearance">
        <item name="fontFamily">@font/sfpro_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="color">@color/greyScale_600</item>
    </style>

    <style name="SFBTextAppearance.Light" parent="android:TextAppearance">
        <item name="fontFamily">@font/sfpro_display_regular</item>
        <item name="fontWeight">300</item>
        <item name="color">@color/greyScale_800</item>
    </style>
</resources>
